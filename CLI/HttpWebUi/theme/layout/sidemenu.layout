<html>
<head>
    <title>[[html_title]] - [[html_title_after]]</title>
    [[html_cs_top]]
    <link rel="icon" type="image/png" href="[[url_base]]theme/images/favicon.png">
    <link rel="stylesheet" type="text/css" href="[[url_base]]theme/css/site.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row mt-1 justify-content-between">
            <div class="col-1"><a href="[[url_base]]"><img class="logo" src="[[url_base]]theme/images/logo.png" alt="logo"/></a></div>
        </div>
        <div class="row">
            <div class="col-2">
                <div class="row">
                    <div class="col-12">
                        <ul class="nav nav-pills flex-column">
                            [[html_menu]]
                        </ul>
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-12">
                        <br/><br/>
                        <hr/>
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-5">
                        <a href="[[url_base]]login/logout"><button type="button" class="btn btn-block btn-secondary btn-sml">Logout</button></a>
                    </div>
                </div>
            </div>


            <div class="col-10">
                <div class="card">
                    <div class="card-header">
                        <div class="row mt-1 justify-content-between">
                            <div class="col-5">[[page_title]]</div>
                            <div class="col-1 justify-content-end">[[page_actions]]</div>
                        </div>
                    </div>
                    <div class="card-body">
                        [[page_content]]
                    </div>
                </div>
            </div>
        </div>
    </div>
    [[html_js_bottom]]
    <script type="text/javascript" src="[[url_base]]theme/js/site.js"></script>
    <script type="text/javascript">
        $( document ).ready(function() {
            [[html_js_onready]]
        });
    </script>
</body>
</html>
